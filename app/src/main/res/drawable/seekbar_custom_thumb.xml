<!-- res/drawable/seekbar_thumb_selector.xml -->
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- State when the thumb is selected/pressed -->
    <item android:state_pressed="true" android:drawable="@drawable/seekbar_thumb_selected"/>
    <!-- State when the thumb is not selected -->
    <item android:drawable="@drawable/seekbar_thumb_normal"/>
</selector>
