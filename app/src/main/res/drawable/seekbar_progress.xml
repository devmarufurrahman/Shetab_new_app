<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Unselected part of the SeekBar -->
    <item android:id="@android:id/background">
        <shape>
            <solid android:color="#D3D3D3" /> <!-- Change this color for unselected part -->
            <corners android:radius="4dp" />
        </shape>
    </item>

    <!-- Selected part of the SeekBar -->
    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <solid android:color="#FF0000" /> <!-- Change this color for selected part -->
                <corners android:radius="4dp" />
            </shape>
        </clip>
    </item>
</layer-list>
